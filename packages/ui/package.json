{
  "name": "@siddheshtawde/ui",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsup && tailwindcss -i ./src/index.css -o ./dist/index.css",
    "dev": "concurrently \"npm run watch:tsup\" \"npm run watch:tailwind\"",
    "watch:tsup": "tsup --watch",
    "watch:tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "react": "^18",
    "react-icons": "^5.4.0",
    "tailwind-merge": "^2.5.5",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@siddheshtawde/eslint-config": "*",
    "@siddheshtawde/typescript-config": "*",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "publishConfig": {
    "access": "public"
  }
}
