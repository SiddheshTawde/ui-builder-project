{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup && tailwindcss -i ./src/index.css -o ./dist/index.css",
    "dev": "concurrently \"npm run watch:tsup\" \"npm run watch:tailwind\"",
    "watch:tsup": "tsup --watch",
    "watch:tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.4",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-icons": "^5.2.1",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
