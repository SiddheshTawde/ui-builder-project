{
  "name": "@repo/drag-and-drop",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsup && tailwindcss -i ./src/index.css -o ./dist/index.css",
    "dev": "concurrently \"npm run watch:tsup\" \"npm run watch:tailwind\"",
    "watch:tsup": "tsup --watch",
    "watch:tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@repo/ui": "*",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.8",
    "lodash": "^4.17.21",
    "tailwind-merge": "^2.4.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/lodash": "^4.17.7",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "postcss": "^8.4.35",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
